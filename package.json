{
  "name": "ghost-deploy",
  "version": "1.0.0",
  "description": "Deploy your Ghost theme to a running Ghost instance",
  "main": "deploy.js",
  "repository": "https://github.com/hexrweb/ghost-deploy",
  "author": "HexR <hello@hexr.org>",
  "license": "MIT",
  "engines": {
    "node": "^8.9.0 || ^ 10.13.0"
  },
  "files": [
    "actions",
    "utils",
    "deploy.js"
  ],
  "keywords": [
    "ghost",
    "deployment"
  ],
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "xo",
    "test": "yarn run lint && yarn run test:unit && yarn run test:acceptance",
    "test:unit": "nyc --reporter=html --reporter=text mocha --recursive test/unit",
    "test:acceptance": "mocha test/acceptance/**/*-spec.js"
  },
  "dependencies": {
    "@tryghost/admin-api": "^0.4.0",
    "gscan": "^2.2.1"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rewire": "^4.0.1",
    "sinon": "^7.2.5",
    "xo": "^0.24.0"
  },
  "xo": {
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ]
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
